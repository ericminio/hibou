<!DOCTYPE html>
<html>
<head>
  <title>Hibou</title>
  <%= stylesheet_link_tag 'scaffold', 'formtastic', 'forms', 'style', 'hibou', :media => :all %>
  <%= stylesheet_link_tag 'print', :media => :print %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="header">
    <a href="<%= root_path  %>" id="home-link">Home</a>

    <% if user_signed_in?%>
        <br />
        <%= link_to 'Edit your account', edit_user_registration_path  %>
        &nbsp;|&nbsp;
        <%= link_to 'Logout', destroy_user_session_path  %>
    <% end %>
</div>
<div id="content">
    <%= yield %>
</div>

</body>
</html>
