!!!
%html
  %head
    %title Hibou
    %head
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    = stylesheet_link_tag 'formtastic', 'forms', :media => :all
    -#= stylesheet_link_tag 'print', :media => :print
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body.wat
    #header
      %h1= link_to t('hibou.daycare.name'), root_path
      %h3= t('hibou.title')
      #user-navigation
        %ul
          - if user_signed_in?
            %li
              = link_to t('hibou.account.profile'), edit_user_registration_path
            %li
              %a{:href => "#"}= t("web-app-theme.settings", :default => "Settings")
            %li
              = link_to t('hibou.account.logout'), destroy_user_session_path, :class => 'logout'
      #main-navigation
        %ul
          %li
            = link_to t(:menu_todays_schedule), todays_schedule_path, :id => 'schedule_of_the_day'
          %li
            = link_to t(:menu_bookings), bookings_path
          %li
            = link_to t(:menu_add_booking), new_booking_path, :id => 'new_booking'
          %li
            = link_to t(:menu_children), children_path
          %li
            = link_to t(:menu_add_a_child), new_child_path

    -##header
    -#  #header_text
    -#    %h1{:id => ""}
    -#      =t :CPN_St_Eustache
    -#    %h3{:id => ""}
    -#      =t :kindergarten_management_system

    #content
      #page_content
        = yield
      #footer
        =t :brought_to_you_by
        %a{:href => "http://wwww.pyxis-tech.com"} Pyxis Technologies
        |
        =t :produced_by
        %a{:href => "http://www.codapalooza.com/teams/pyxis-sosoft/"}
        =t :team_sosoft