!!!
%html
  %head
    %title Hibou
    %head
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body.hibou
    #container
      #header
        %h1= link_to t('daycare.name'), root_path
        %h3= t('title')
        #user-navigation
          %ul
            - if user_signed_in?
              %li
                = link_to t('account.profile'), edit_user_registration_path
              %li
                = link_to t('account.logout'), destroy_user_session_path, :class => 'logout'
        #main-navigation
          %ul
            %li
              = link_to t(:menu_todays_schedule), todays_schedule_path, :id => 'schedule_of_the_day'
            %li{active?(:bookings)}
              = link_to t('menu.bookings'), bookings_path
            %li{active?(:children)}
              = link_to t('menu.children'), children_path

      #wrapper
        = yield
    #footer
      .block
        %p
